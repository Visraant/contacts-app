<h1>
All Contacts
</h1>

<div class="row">

<% @contacts.each do |contact| %>

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="..." alt="...">
      <div class="caption">
      <h3><a href="/contacts/<%= contact.id %>"><%= contact.full_name %> </a></h3>
      <h2>Short Bio: <%= contact.bio %></h2>
        <p>Email: <%= contact.email %></p>
        <p>Phone Number: <%= contact.country_code %></p>
        <p>Last Updated: <%= contact.friendly_time %></p>
        <p><a href="/contacts/<%= contact.id %>/edit" class="btn btn-primary" role="button">Edit Contact</a> <%= link_to "Delete Contact", "/contacts/#{contact.id}", method: :delete %></p>
    </div>
  </div>
  </div>
      <% end %>
</div>


<div class="panel-footer"><h2><%= link_to "Add a new contact", "/contacts/new" %></h2>
</div>